{
    "compilerOptions": {
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "node",
        "lib": ["es2017", "dom"],
        "jsx": "react",
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["node_modules"],
        "baseUrl": ".",
        "paths": {
            "~": ["."],
            "~/*": ["./*"]
        }
    },
    "exclude": ["node_modules"]
}
