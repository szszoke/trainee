{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "moduleResolution": "node",
        "lib": ["es2015"],
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["node_modules"],
        "baseUrl": ".",
        "paths": {
            "~": ["."],
            "~/*": ["./*"]
        }
    },
    "exclude": ["node_modules"]
}
